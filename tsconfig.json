{
    "compilerOptions": {
      "target": "ES2023",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": "src",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"]
  }
  